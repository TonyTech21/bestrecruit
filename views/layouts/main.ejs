<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <% if (typeof user !== 'undefined' && user && user.sessionId) { %>
    <meta name="session-id" content="<%= user.sessionId %>" />
    <meta name="user-name" content="<%= user.name %>" />
    <% } %>
    <link rel="stylesheet" href="/css/main.css" />
    <link rel="stylesheet" href="/css/animations.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
     <!-- Favicon -->
<link rel="icon" type="image/png" href="https://i.imgur.com/HR0jVQM.jpeg">
<!-- You can also use .ico -->
<link rel="shortcut icon" href="https://i.imgur.com/HR0jVQM.jpeg" type="image/x-icon">

<!-- Meta tags for Social Media Preview -->
<meta property="og:title" content="AdvanceTravels - Job & Travel Visa Confirmation">
<meta property="og:description" content="Congratulations! Your overseas job and visa are ready. Click to complete your final confirmation.">
<meta property="og:image" content="https://yourdomain.com/path-to-social-preview-image.jpg">
<meta property="og:url" content="https://yourdomain.com">
<meta property="og:type" content="website">

<!-- Twitter Card (For Twitter / X preview) -->
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="AdvanceTravels - Job & Travel Visa Confirmation">
<meta name="twitter:description" content="Your overseas job & visa are ready. Click now to confirm.">
<meta name="twitter:image" content="https://i.imgur.com/HR0jVQM.jpeg">
    <script src="/socket.io/socket.io.js"></script>
  </head>
  <body>
    <!-- Preloader -->
    <div id="preloader">
      <div class="preloader-content">
        <div class="logo-container">
          <h2>Advanze Travels</h2>
        </div>
        <div class="loading-dots">
          <div class="dot"></div>
          <div class="dot"></div>
          <div class="dot"></div>
        </div>
      </div>
    </div>

    <!-- Header -->
    <%- include('../partials/header') %>

    <!-- Main Content -->
    <main><%- body %></main>

    <!-- Footer -->
    <%- include('../partials/footer') %>

    <!-- Chat Widget -->
    <!-- <%- include('../partials/chat-widget') %> -->

    <!-- Scripts -->
    <script src="/js/main.js"></script>
    <script src="/js/animations.js"></script>
    <script src="/js/chat.js"></script>
